@page
@model ToDo.Mvc.WebUI.Models.ToDoItemViewModel

<div class="row">
    <div class="col text-center bg-secondary">
        <h3>Edit</h3>
    </div>
</div>

<div class="row mt-3">
    <div class="col">
        @using (Html.BeginForm("EditToDoItemSubmit", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                @Html.LabelFor(model => model.CreatedAt, new { @class="col-6" })
                @Html.DisplayFor(model => model.CreatedAt, new { @class="col-6" })
            </div>

            <div class="row">
                @Html.LabelFor(model => model.Description, new { @class="col-6" })
                @Html.TextBoxFor(model => model.Description, new { @class="col-6" })
            </div>

            <div class="row text-center mt-3">
                <div class="col">
                    <button class="btn btn-primary w-200" type="submit">Save</button>
                </div>
            </div>
        }
    </div>
</div>