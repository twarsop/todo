@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col text-center">
        <button type="button" onclick="location.href='@Url.Action("AddToDoItem")'" class="btn btn-primary" style="width: 200px;">Add</button>
    </div>
</div>

<table class="table"style="color: #fff;">
    <tr>
        <th>Created At</th>
        <th>Decsription</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>
    @if (Model != null)
    {
        @foreach (var toDoItem in Model)
        {
            <tr>
                <td>@toDoItem.CreatedAt</td>
                <td>@toDoItem.Description</td>
                <td class="text-center">
                    <a href="@Url.Action("EditToDoItem", new { id = toDoItem.Id})">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="@Url.Action("DeleteToDoItem", new { id = toDoItem.Id})">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    }
</table>