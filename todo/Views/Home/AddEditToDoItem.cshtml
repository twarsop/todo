@model ToDoItem
@{
    ViewData["Title"] = "To Do Item";
}

@using (Html.BeginForm("SaveToDoItem", "Home", FormMethod.Post))
{
    <input type="hidden" id="id" name="id" value="@Model.Id" />
    <table>
        <tr>
            <td>Description: </td>
            <td><input type="text" name="txtDescription" value="@Model.Description" /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Save" /></td>
        </tr>
    </table>
}